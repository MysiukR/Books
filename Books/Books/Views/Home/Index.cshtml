@model IEnumerable<Books.Models.Books>

@{
    ViewBag.Title = "Index";
}
<html>
<head>

<script src="~/Scripts/jquery-3.2.1.min.js"></script>
<script src="~/scripts/CRUD_table.js"></script>
</head>
<body>



    

<div class="container">
    <br><br>
    <!-- Trigger the modal with a button -->
    <button type="button" class="btn btn-success" data-toggle="modal" data-target="#myModal">Add book</button>
  
    <!-- Modal -->
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Add new book in my library</h4>
                </div>
                <div class="modal-body">
                    <CENTER>
                        
                        <div class="alert alert-danger fade">
                            <button type="button" class="close" data-dismiss="alert">×</button>
                            <strong>Incorrect data!</strong> Error: empty field, integer number of pages, year of publisiong: 1930-2017!
                        </div>
                       
                            <label class="control-label" for="pages">Name:</label>
                            <input class="form-control" type="text" name="txtName" id="txtName" />
                            <label class="control-label" for="pages">Author:</label>
                            <input class="form-control" type="text" name="txtAuthor" id="txtAuthor" />
                            <label class="control-label" for="pages">Pages:</label>
                            <input class="form-control"  type="text" name="txtPages" id="txtPages" />
                            <label class="control-label" for="pages">Year:</label>
                            <input class="form-control" type="text" name="txtYear" id="txtYear" />
                            <br>
                            <input class="btn btn-success" type="submit" value="Add book" id="submit" name="submit"/>                        
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        
                    </CENTER>
                </div>
                
                        
            </div>
        </div>
    </div>
</div>

    <!-- Modal -->
    <div class="modal fade" id="myModal1" role="dialog">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Do you want to delete this book?</h4>
                </div>
                <div class="modal-body">
                    <CENTER>
                        <input class="btn btn-danger" type="submit" value="Yes" id="del_yes" name="del_yes"/>  
                        <input class="btn btn-default" type="submit" value="No" id="del_no" name="del_no"  data-dismiss="modal"/> 
                    </CENTER>
                </div>
            </div>
        </div>
    </div>
  
    <!--Main-->
    
    <table class="table table-striped" id="TableA">
        <thead>
            <tr>
                <th>Name</th>
                <th>Author</th>
                <th>Pages</th>
                <th>Year</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Author</td>
                    <td>@item.Pages</td>
                    <td>@item.Year_of_publishing</td>
                    <td><input class="btn btn-danger" type="submit" data-toggle="modal" data-target="#myModal1" value="Remove" id="submit" name="submit"/></td>
                 </tr>
            }
        </tbody>
    </table>

 
</body>
</html>